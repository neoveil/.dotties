#!/bin/sh

in_group() {
  hyprctl activewindow -j | jq -e '(.grouped // [] | length) > 0' > /dev/null 2>&1
}

COMMAND="movefocus"
DIRECTION="$1"

if in_group; then
  case "$1" in
    l) DIRECTION="b";;
    r) DIRECTION="f";;
    *) exit 1;;
  esac

  COMMAND="changegroupactive"
fi

hyprctl -q dispatch "$COMMAND" "$DIRECTION"
