# -*- mode: sh; -*-
# vim:ft=sh

# misc
alias path="echo \$PATH | tr -s ':' '\n'"
alias please="sudo"
alias cummit='git commit -m "$(https whatthecommit.com/index.txt)"'
alias whatsmyip="https -b ipinfo.io/ip | cat"
alias weather="https -b wttr.in | cat"
alias fzp='fzf --preview="\$HOME/.config/fzf/scripts/preview {}"'
alias pbcopy="wl-copy"
alias pbpaste="wl-paste"

# ls utils
alias eza="eza --time-style=long-iso --color=always --icons --group-directories-first --git"
alias ls="eza"
alias ll="ls -lg@"
alias l="ll -a"
alias lst="ls --tree"
alias llt="lst -lg@"
alias lt="lst -a"
alias llo="ll --octal-permissions"
alias lo="llo -a"
alias llto="llt --octal-permissions"
alias lto="llto -a"

# system management
alias yayc="yay -Yc && yay -Scc --noconfirm && paccache -rk0"
alias sctl="systemctl"
alias suctl="systemctl --user"
alias jenv="sudo archlinux-java"

# better defaults
alias df="df -h"
alias du="du -ch"
alias cat="bat"
alias mkdir="mkdir -pv"

# kitty
if [[ "$TERM" = "xterm-kitty" ]]; then
  alias ssh="kitten ssh"
  alias icat="kitten icat"
fi
