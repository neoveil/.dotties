# -*- mode: sh; -*-

wl-copy() {
  command wl-copy "$@" 2>/dev/null;
}

imvpaste() {
  if wl-paste --list-types | grep -q 'image/png'; then
    wl-paste > /dev/shm/clipboard.png && imv /dev/shm/clipboard.png
  fi
}

zathura() {
  command zathura --fork "$@" > /dev/null 2>&1;
}

bak() {
  cp -r "$1" "$1.bak.$(date +'%Y%m%d%H%M%S')"
}

keygen() {
  size=${1:-64}
  tr -cd '[:alnum:]' < /dev/urandom | fold -w "$size" | head -n 1
}
